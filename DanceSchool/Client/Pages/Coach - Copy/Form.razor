<EditForm Model="@coach" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Imię trenera :</label>
        <div>
            <InputText @bind-Value="@coach.Name" />
            <ValidationMessage For="@(() => coach.Name)" />
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Nazwisko trenera :</label>
            <div>
                <InputText @bind-Value="@coach.LastName" />
                <ValidationMessage For="@(() => coach.LastName)" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Doświadczenie :</label>
            <div>
                <InputNumber @bind-Value="@coach.AgeExperience" />
                <ValidationMessage For="@(() => coach.AgeExperience)" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Opis trenera :</label>
            <div>
                <InputTextArea @bind-Value="@coach.Description" />
                <ValidationMessage For="@(() => coach.Description)" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-success">
        @ButtonText
    </button>
</EditForm>

@code {
    [Parameter] public Coach coach{ get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}